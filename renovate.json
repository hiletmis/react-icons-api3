{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "matchDepTypes": [
                "dependencies"
            ],
            "matchUpdateTypes": [
                "major",
                "patch",
                "minor"
            ],
            "schedule": [
                "after 10pm on Friday"
            ],
            "groupName": "non-major-dependencies"
        },
        {
            "matchDepTypes": [
                "dependencies"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "schedule": [
                "after 10pm on Friday"
            ],
            "groupName": "major-dependencies"
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "schedule": [
                "after 10pm on Friday"
            ],
            "groupName": "major-dev-dependencies"
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "schedule": [
                "after 10pm on Friday"
            ],
            "groupName": "non-major-dependencies"
        }
    ],
    "rangeStrategy": "bump",
    "lockFileMaintenance": {
        "enabled": false
    },
    "reviewers": [
        "hiletmis"
    ],
    "dependencyDashboard": false
}