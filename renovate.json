{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "camelcase"
            ],
            "enabled": false
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchPackagePatterns": [
                "@api3/.*",
                "@nodary/.*"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "schedule": [
                "before 6pm"
            ],
            "groupName": "api3 major updates"
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchPackagePatterns": [
                "@api3/.*",
                "@nodary/.*"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "schedule": [
                "before 6pm"
            ],
            "groupName": "api3"
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "schedule": [
                "before 6pm"
            ],
            "groupName": "other minor updates"
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "schedule": [
                "before 6pm"
            ],
            "groupName": "other major updates"
        }
    ],
    "rangeStrategy": "bump",
    "lockFileMaintenance": {
        "enabled": false
    },
    "baseBranches": [
        "production",
        "main"
    ],
    "reviewers": [
        "hiletmis"
    ],
    "dependencyDashboard": false
}