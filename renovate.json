{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "camelcase"
            ],
            "enabled": false
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchPackagePatterns": [
                "@api3\/.*",
                "@nodary\/.*"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "automerge": true,
            "automergeType": "pr-comment",
            "automergeComment": "bors: r+",
            "schedule": [
                "before 2pm on Friday"
            ],
            "groupName": "api3",
            "enabled": true
        }
    ],
    "rangeStrategy": "bump",
    "lockFileMaintenance": {
        "enabled": false
    },
    "dependencyDashboard": false
}